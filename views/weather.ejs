    <!-- Heading -->
    <h1 class="text-3xl font-extrabold text-yellow-400 mb-2 tracking-wide">Check the Weather</h1>
    <p class="text-white/70 text-sm mb-6">
      Enter your city to see current weather conditions.
    </p>

    <!-- Form -->
    <form action="/weather" method="POST" class="space-y-4">
      <input
        type="text"
        id="city"
        name="city"
        placeholder="e.g. Pune"
        required
        class="w-full px-4 py-2 rounded-lg bg-slate-800 text-white placeholder:text-gray-400 border border-slate-700 focus:outline-none focus:ring-2 focus:ring-yellow-400 shadow-inner"
      />
      <button
        type="submit"
        class="w-full bg-yellow-500 hover:bg-yellow-400 text-black font-semibold py-2 rounded-lg transition-transform hover:scale-105 shadow-md hover:shadow-yellow-400/40"
      >
