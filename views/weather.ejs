      </button>
    </form>

    <!-- Back Button -->
    <form action="/" method="GET" class="mt-6">
      <button
        type="submit"
        class="w-full bg-slate-700 hover:bg-slate-600 text-white py-2 rounded-lg transition hover:scale-105 shadow-sm"
      >
