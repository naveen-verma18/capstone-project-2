<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= coin %> Price</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-slate-900 to-black text-white flex flex-col justify-between px-4 py-10 font-sans">

  <!-- üîπ Main Container -->
  <main class="flex flex-col items-center justify-center flex-grow">

    <div class="bg-gray-800 border border-gray-700 shadow-[0_10px_25px_rgba(0,0,0,0.5)] rounded-2xl max-w-xl w-full p-8 space-y-6 transition-all">

      <!-- ü™ô Title -->
      <h1 class="text-3xl font-bold text-center text-yellow-400 tracking-wide"><%= coin %> Price ü™ô</h1>

      <!-- üíµ Price Info -->
      <% if (inrPrice !== "N/A") { %>
        <div class="text-center space-y-1">
          <p class="text-lg text-gray-300">üáÆüá≥ INR: <span class="text-white font-semibold">‚Çπ<%= inrPrice.toLocaleString() %></span></p>
          <p class="text-lg text-gray-300">üá∫üá∏ USD: <span class="text-white font-semibold">$<%= usdPrice.toLocaleString() %></span></p>
        </div>
      <% } else { %>
        <p class="text-red-400 font-semibold text-center">‚ùå Could not fetch the price for "<%= coin %>"</p>
      <% } %>

      <!-- üìà Chart -->
      <div class="bg-gray-900 rounded-xl p-4 shadow-inner border border-gray-700">
        <canvas id="priceChart" class="w-full h-64"></canvas>
      </div>

      <!-- üîÅ Buttons -->
      <form action="/crypto" method="GET">
        <button class="mt-6 w-full bg-yellow-500 text-gray-900 font-semibold py-2 px-4 rounded-md hover:bg-yellow-400 shadow-md transition">
          üîÅ Check Another Coin
        </button>
      </form>

      <form action="/" method="GET">
        <button class="mt-3 w-full bg-gray-700 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-md transition">
          üè† Back to Home
        </button>
      </form>
    </div>
  </main>

  <!-- üåê Footer -->
  <footer class="text-center mt-10 text-sm text-gray-500 dark:text-gray-400">
    üß† Powered by <a href="https://www.coingecko.com/" target="_blank" class="underline hover:text-yellow-300">CoinGecko</a> | Made by <strong>Naveen Verma</strong> üöÄ
  </footer>

  <!-- üß† Chart.js Logic -->
  <script>
    const ctx = document.getElementById('priceChart').getContext('2d');
    const gradient = ctx.createLinearGradient(0, 0, 0, 400);
    gradient.addColorStop(0, 'rgba(253, 224, 71, 0.4)');
    gradient.addColorStop(1, 'rgba(253, 224, 71, 0.05)');

    new Chart(ctx, {
      type: 'line',
      data: {
        labels: ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
        datasets: [{
          label: '<%= coin %> Price (INR)',
          data: [80000, 80500, 79000, 81000, 83000, 82000, 83500], // Replace with real data
          fill: true,
          backgroundColor: gradient,
          borderColor: '#facc15',
          pointBackgroundColor: '#facc15',
          tension: 0.4
        }]
      },
      options: {
        responsive: true,
        interaction: {
          mode: 'index',
          intersect: false
        },
        plugins: {
          legend: {
            display: true,
            labels: {
              color: 'white',
              font: { weight: 'bold' }
            }
          },
          tooltip: {
            backgroundColor: '#1f2937',
            titleColor: '#facc15',
            bodyColor: '#f3f4f6'
          }
        },
        scales: {
          y: {
            title: {
              display: true,
              text: 'Price (INR)',
              color: 'white'
            },
            ticks: {
              color: 'white'
            },
            grid: {
              color: 'rgba(255,255,255,0.1)'
            }
          },
          x: {
            ticks: {
              color: 'white'
            },
            grid: {
              color: 'rgba(255,255,255,0.05)'
            }
          }
        }
      }
    });
  </script>

</body>
</html>
